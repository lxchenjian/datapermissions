<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.data.permissions.mapper.DataMapper">


    <select id="getDaySale" resultType="com.data.permissions.bean.DO.DaySaleDO">
        select
            *
        from gds_day_sale a
    </select>
    <select id="getDataPermission" resultType="com.data.permissions.bean.DO.UserDataPermission">
        select
            dp.fieldName,
            dp.permissionType,
            udp.values
            from data_permission dp
            inner join user_data_permission udp
            on dp.id = udp.permission_id
        where udp.user_id = 123
    </select>


    <select id="getPromotionSelectSingle" resultType="com.data.permissions.bean.DO.PromotionSelectionSingle">
        select *
            from  promotion_selection_single
    </select>
</mapper>
